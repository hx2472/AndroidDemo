<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hqc.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hqc.demo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hqc.demo.eventbusdemo.EventBusActivity1" />
        <activity android:name="com.hqc.demo.eventbusdemo.EventBusActivity2" />
        <activity
            android:name="com.hqc.demo.dataclearreceiverdemo.DataClearReceiverDemoActivity"
            android:label="@string/title_activity_data_clear_receiver_demo" />

        <receiver
            android:name="com.hqc.demo.dataclearreceiverdemo.DataClearReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.gionee.clearData" >
                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>